<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="4dip"
        app:cardElevation="0px">

        <ImageView
            android:id="@+id/story_photo1"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/main_site_multiple_story_default_1" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dip"
            app:cardElevation="0px">

            <ImageView
                android:id="@+id/story_photo2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/main_site_multiple_story_default_2_3" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dip"
            app:cardElevation="0px">

            <ImageView
                android:id="@+id/story_photo3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/main_site_multiple_story_default_2_3" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/story_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#2e313c"
        android:textSize="16dp"
        tools:text="我用三个月时间学完EliteMBA《职场新人营  销》实践课，月薪从三千到一万。" />


</LinearLayout>