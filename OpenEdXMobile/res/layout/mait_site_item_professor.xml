<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/professor_image_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dip"
        app:cardElevation="0px">

        <ImageView
            android:id="@+id/professor_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:ignore="ContentDescription"
            tools:src="@mipmap/ic_launcher" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/professor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/professor_image_bg"
        android:textColor="#2e313c"
        android:textSize="15dp"
        tools:text="萧教授" />

    <TextView
        android:id="@+id/professor_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/professor_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/professor_image_bg"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#999999"
        android:textSize="14dp"
        tools:text="美国宾夕法尼亚大学沃顿商学院 管理科学 博士" />


</RelativeLayout>