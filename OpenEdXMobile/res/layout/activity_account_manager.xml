<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/layout_bind_mobile"
        style="@style/eliteu_account_item_layout_style"
        android:layout_marginTop="15dp">

        <TextView
            style="@style/new_eliteu_account_item_tv_style"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:text="@string/bind_mobile" />

        <org.edx.mobile.view.custom.IconImageViewXml
            android:id="@+id/icon_1"
            style="@style/eliteu_account_item_right_icon_style"
            app:iconColor="#ccd1d9"
            app:iconName="fa-angle-right" />

        <TextView
            android:id="@+id/binding_mobile_tv"
            style="@style/new_eliteu_account_item_sub_text_style"
            android:layout_toLeftOf="@+id/icon_1"
            tools:text="未绑定" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/layout_reset_password"
        style="@style/eliteu_account_item_layout_style">

        <TextView
            style="@style/new_eliteu_account_item_tv_style"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:text="@string/reset_password" />

        <org.edx.mobile.view.custom.IconImageViewXml
            android:id="@+id/icon_2"
            style="@style/eliteu_account_item_right_icon_style"
            app:iconColor="#ccd1d9"
            app:iconName="fa-angle-right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:id="@+id/layout_delete_account"
        style="@style/eliteu_account_item_layout_style">

        <TextView
            style="@style/new_eliteu_account_item_tv_style"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:text="@string/delete_account" />

        <org.edx.mobile.view.custom.IconImageViewXml
            android:id="@+id/icon_3"
            style="@style/eliteu_account_item_right_icon_style"
            app:iconColor="#ccd1d9"
            app:iconName="fa-angle-right" />

    </RelativeLayout>


</LinearLayout>