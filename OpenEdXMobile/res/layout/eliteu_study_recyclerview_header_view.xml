<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <FrameLayout
        android:id="@+id/harvard_manager_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/cardview_shadow"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="16dp"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:src="@drawable/harvard_management_mentor2"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/harvard_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:textColor="#656d78"
                android:textSize="14dp"
                tools:text="有效期至：2020-04-29" />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/list_title"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="15dp"
        android:text="@string/study_progress"
        android:textColor="#434343"
        android:textSize="18dp" />

</LinearLayout>