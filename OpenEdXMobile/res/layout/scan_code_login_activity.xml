<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.king.zxing.ViewfinderView
        android:id="@+id/viewfinderView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:labelText="@string/tips_scan_code"
        app:labelTextColor="@color/new_bind_mobile_get_code_cannot_click"
        app:labelTextSize="14dp"
        app:laserColor="@color/vip_current_price_unselecct_color"
        app:cornerColor="@color/vip_current_price_unselecct_color"
        app:labelTextLocation="bottom"
        app:laserStyle="line"/>

    <include layout="@layout/scan_code_login_top_title_back_bar"/>

</android.support.constraint.ConstraintLayout>